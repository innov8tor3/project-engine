    <script>
        // Valuation Calculator
        const slider = document.getElementById('capture');
        const valueSpan = document.getElementById('captureValue');
        const volumeSpan = document.getElementById('volume');
        const revenueSpan = document.getElementById('revenue');
        const valuationSpan = document.getElementById('valuation');

        function updateValuation() {
            const capture = parseFloat(slider.value) / 100;
            valueSpan.textContent = slider.value + '%';
            const volume = 180000000000 * capture;
            const revenue = volume * 0.01;
            const valuation = revenue * 10 * 2;
            
            volumeSpan.textContent = (volume / 1000000).toFixed(2);
            revenueSpan.textContent = (revenue / 1000000).toFixed(2);
            valuationSpan.textContent = (valuation / 1000000).toFixed(0);
        }

        slider.addEventListener('input', updateValuation);
        updateValuation();

        // Scroll Progress Indicator
        window.addEventListener('scroll', () => {
            const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = (winScroll / height) * 100;
            document.getElementById('progressBar').style.width = scrolled + '%';
        });

        // Smooth scroll for better UX
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
